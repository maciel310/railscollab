<%= form_tag task_path(:task_list_id => @task.task_list_id, :id => @task.id), :method => :put, :class => 'editTaskItem' %>
  <%= render :partial => 'form', :object => @task %>
  <div><button class="submit" type="submit"><%=:edit_task.l %></button> <%= :or.l %> <%= link_to :cancel.l, task_path(:task_list_id => @task.task_list_id, :id => @task.id), :class => 'cancel' %></div>
  <img src="/images/loading.gif" alt="Loading" style="display: none; margin-top: 10px;" class="loading_animation" />
</form>
